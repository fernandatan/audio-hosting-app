{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": ".",
      "typeRoots": ["./node_modules/@types"],
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src", "src/server.ts"],
    "exclude": ["node_modules"]
  }
  